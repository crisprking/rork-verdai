{
  "expo": {
    "name": "PlantMD - AI Plant Doctor",
    "slug": "plantmd-ai-plant-doctor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "plantmd",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2ECC71"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.plantmd.aidoctor",
      "buildNumber": "1.0.5",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "PlantMD needs photo access to analyze your plant images for health diagnosis",
        "NSCameraUsageDescription": "PlantMD uses your camera to capture plant photos for AI-powered health analysis",
        "NSMicrophoneUsageDescription": "PlantMD may use microphone for voice notes about plant care"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#2ECC71"
      },
      "package": "com.plantmd.aidoctor",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://plantmd.app/"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "PlantMD analyzes your plant photos to provide AI-powered health diagnostics and care recommendations."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}